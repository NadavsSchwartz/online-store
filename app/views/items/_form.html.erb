<%= form_for @item do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.label :image_url %>
	<%= f.text_field :image_url %>
	<br>
	<%= f.label :price %>
	<%= f.text_field :price %>
	<br>
	<%= f.label :inventory %>
	<%= f.text_field :inventory %>
	<br>
	<%= f.label :category_id %>
	<%= f.collection_select :category_id, Category.all, :id, :name %>
	<br>
	<%= f.submit %>
<% end %>
