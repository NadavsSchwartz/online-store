<h1>Order #<%= @order.id %></h1>
<h5>Time ordered: <%= @order.order_time %></h5>
<ul>
	<% @order.line_items.each do |line_item| %>
		<li><%= link_to "#{line_item.item.name}", item_path(line_item.item) %> | Quantity: <%= line_item.quantity %></li>
	<% end %>
</ul>
<hr>
<p><strong>Total: <%= number_to_currency(@order.cart.total) %></strong></p>

